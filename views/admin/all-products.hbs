{{>admin-side}}
       
      <main class="main-wrap">
        
        <section class="content-main">
            <div class="content-header">
                <div>
                    {{!-- <a href="#" class="btn btn-light rounded font-md">Export</a>
                    <a href="#" class="btn btn-light rounded  font-md">Import</a> --}}
                    <a href="/admin/add-product" class="btn btn-primary btn-sm rounded">Add Product</a>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <div class="row">
                            <div class="col">
                                <h3 class="mb-0">Product List</h3>
                            </div>
                            <div class="col-auto">
                                <form class="d-flex">
                                    <input type="text" class="form-control" id="search-input" placeholder="Search...">
                                    {{!-- <button class="btn btn-primary" id="search-btn">Search</button> --}}
                                </form>
                            </div>
                        </div>
                    </div>
                  <table class="table">
                    <thead>
                        <tr>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each product}}
                        <tr>
                        <td>
                            <a href="#">
                            <img src="{{this.images.image1}}" class="img-sm img-thumbnail" alt="Item">
                            {{this.product_name}}
                            </a>
                        </td>
                        <td>₹ {{this.price}}.00</td>
                        <td><span class="badge rounded-pill alert-success">{{this.category_name}}</span></td>
                        <td>
                            <a href="/admin/edit-product/{{this._id}}" class="btn btn-sm btn-primary rounded btn-brand">
                            <i class=""></i> Edit
                            </a>
                            <a href="/admin/delete-product/{{this._id}}" class="btn btn-sm btn-danger btn-light rounded" onclick="return confirm('Do you want to delete {{this.product_name}}?')">
                            <i class=""></i> Delete
                            </a>
                        </td>
                        </tr>
                        {{/each}}
                    </tbody>
                    </table>
            </div> <!-- card end// -->
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        {{#if pagination.prevPage}}
                        <li class="page-item">
                            <a class="page-link" href="{{pagination.prevPage.url}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        {{/if}}
                        {{#each pagination.pages}}
                        <li class="page-item {{#if active}}active{{/if}}">
                            <a class="page-link" href="{{url}}">{{page}}</a>
                        </li>
                        {{/each}}
                        {{#if pagination.nextPage}}
                        <li class="page-item">
                            <a class="page-link" href="{{pagination.nextPage.url}}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                        {{/if}}
                    </ul>
                </nav>
            </div>
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> ©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>  


<script>
  $(document).ready(function() {
    // Attach a keyup event handler to the search input field
    $("#search-input").on("keyup", function() {
      // Get the search query from the input field
      var query = $(this).val().toLowerCase();
      
      // Loop through all the rows in the table
      $("tbody tr").each(function() {
        // Get the text content of the row and check if it contains the search query
        var content = $(this).text().toLowerCase();
        if (content.indexOf(query) === -1) {
          // If the row does not match the search query, hide it
          $(this).hide();
        } else {
          // If the row matches the search query, show it
          $(this).show();
        }
      });
    });

  });


</script>



