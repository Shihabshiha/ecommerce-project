<div class="screen-overlay"></div>
{{>admin-side}}

      <main class="main-wrap">
          <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Category management </h2>
                    <p>Add or delete a category</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <form action="/admin/add-category" method="post">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">New category name</label>
                                    {{!-- {{#if categoryExist}}
                                    <p class="error text-danger">Category already exist </p>
                                    {{/if}} --}}
                                    {{#if error}}
                                         <div class="alert alert-danger" role="alert">
                                              {{error}}
                                         </div>
                                    {{/if}}
                                    <input type="text" placeholder="Type here" class="form-control" id="product_name" name="category_name"/>
                                </div>
                               
                                <div class="d-grid">
                                     <button class="btn btn-primary">Create category</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sl No</th>
                                            <th>Category Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      {{#each category}}
                                        <tr>
                                            <td>{{@index}}</td>
                                            <td><b>{{this.category_name}}</b></td>
                                            <td><a href="/admin/delete-category/{{this._id}}" >
                                              <button class="btn btn-danger " style="font-size: small;" onclick="return confirm('Do you want to delete {{this.category_name}}?')">Delete</button>
                                            </a></td>
                                      {{/each}}      
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
      </main>
          