<script>
$(document).ready(function() {
    // Add "active" class to the selected menu item
    var currentPath = window.location.pathname;
    $('.menu-link[href="' + currentPath + '"]').closest('.menu-item').addClass('active');

    // Handle menu item click event
    $('.menu-link').click(function(e) {
        var menuItem = $(this).closest('.menu-item');
        var submenu = menuItem.find('.submenu');

        if (submenu.length > 0) {
            // Menu item has a submenu
            if (menuItem.hasClass('active')) {
                // Submenu is currently open, close it
                menuItem.removeClass('active');
                
            } else {
                // Submenu is currently closed, open it
                $('.menu-item').removeClass('active');
                // Close other submenus
                menuItem.addClass('active');
                
            }
            e.preventDefault();
        } else {
            // Menu item does not have a submenu
            $('.menu-item').removeClass('active');
            menuItem.addClass('active');
        }
    });

    // Add "active" class to parent menu item when submenu item is clicked
    $('.submenu a').click(function() {
        $('.menu-item').removeClass('active');
        $(this).closest('.menu-item').addClass('active');
    });
});


</script>


