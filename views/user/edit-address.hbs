<div class="container  mx-auto my-4">
 <div class="card w-50 mx-auto p-4">
  <h2 class="my-4">Edit Address</h2>
  <form action="/edit-address/{{address._id}}" method="post">
    <div class="form-group mb-3">
      <label for="billing_address" class="form-label">Address</label>
      <input type="text" class="form-control" id="billing_address" name="billing_address" required="" placeholder="Enter your address" value="{{address.billing_address}}">
    </div>
    <div class="form-group mb-3">
      <label for="billing_address2" class="form-label">Address Line 2</label>
      <input type="text" class="form-control" id="billing_address2" name="billing_address2" placeholder="Enter your address line 2" value="{{address.billing_address2}}">
    </div>
    <div class="form-group mb-3">
      <label for="city" class="form-label">City / Town</label>
      <input type="text" class="form-control" id="city" name="city" required="" placeholder="Enter your city or town" value="{{address.city}}">
    </div>
    <div class="form-group mb-3">
      <label for="state" class="form-label">State / County</label>
      <input type="text" class="form-control" id="state" name="state" required="" placeholder="Enter your state or county" value="{{address.state}}">
    </div>
    <div class="form-group mb-3">
      <label for="zipcode" class="form-label">Postcode / ZIP</label>
      <input type="text" class="form-control" id="zipcode" name="zipcode" required="" placeholder="Enter your postcode or ZIP" value="{{address.zipcode}}">
    </div>
    <div class="form-group mb-3">
      <label for="phone" class="form-label">Phone</label>
      <input type="text" class="form-control" id="phone" name="phone" required="" placeholder="Enter your phone number" value="{{address.phone}}">
    </div>
    <div class="form-group mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" id="email" name="email" required="" placeholder="Enter your email address" value="{{address.email}}">
    </div>
    <button type="submit" class="btn btn-primary">Save Address</button>
  </form>
 </div>
</div>
