
  <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="index.html" rel="nofollow">Home</a>
                    <span></span> Pages
                    <span></span> Signup
                </div>
            </div>
        </div>
        <section class="pt-150 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 m-auto">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="login_wrap widget-taber-content p-30 background-white border-radius-5">
                                    <div class="padding_eight_all bg-white">
                                        <div class="heading_s1">
                                            <h3 class="mb-30">Create an Account</h3>
                                        </div>
                                        
                                        <form action="/signup" method="post" id="form">
                                         {{#if exists}}
                                            <p class="error text-danger">User Already Exists</p>
                                         {{/if}}
                                            <div class="form-group">
                                                <input type="text" id="username" required="" name="name" placeholder="Username">
                                                <small>Error message</small>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" id="email" required="" name="email" placeholder="Email">
                                                <small>Error message</small>
                                            </div>
                                            <div class="form-group">
                                                <input required="" id="password" type="password" name="password" placeholder="Password">
                                                <small>Error message</small>
                                            </div>
                                            <div class="form-group">
                                                <input required="" id="mobile" type="password" name="phone_no" placeholder="Mobile number">
                                                <small>Error message</small>
                                            </div>
                                            <div class="login_footer form-group">
                                                <div class="chek-form">
                                                    <div class="custome-checkbox">
                                                        <input class="form-check-input" type="checkbox" name="checkbox" id="exampleCheckbox12" value="">
                                                        <label class="form-check-label" for="exampleCheckbox12"><span>I agree to terms &amp; Policy.</span></label>
                                                    </div>
                                                </div>
                                               
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-fill-out btn-block hover-up" name="login">Submit &amp; Register</button>
                                            </div>
                                        </form>
                                        
                                        
                                        <div class="text-muted text-center">Already have an account? <a href="/user-login">Sign in now</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>